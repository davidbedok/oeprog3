<Window x:Class="RSSReaderSpace.ReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RSS Reader" Height="350" Width="525" Background="Gainsboro">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition />
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Keywords:" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10" Height="26" />
        <TextBox Grid.Row="0" Grid.Column="1" Name="keywordsTextBox" Height="20" Margin="10" Text="Orbán,ETO,Cyrus,könyv,dolgozó"/>
        <Button Grid.Row="0" Grid.Column="2" Content="Search" Width="70" Height="20" Margin="10" Click="Go_Click"/>
        <ListView Grid.Row="1" Grid.ColumnSpan="3" Margin="10" Name="resultListView" />
    </Grid>
</Window>
